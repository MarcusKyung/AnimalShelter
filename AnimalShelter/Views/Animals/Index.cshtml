@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Welcome to the Animal Shelter!</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
} 

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"{animal.Type}", "Details", new { id = animal.AnimalId }) - Name: @animal.Name, Date: @animal.Date, Breed: @animal.Breed.</li>
}

<p>@Html.ActionLink("Add new Animal", "Create")</p>
<p>@Html.ActionLink("See all animals by type", "Sort", "Animals")</p> 
